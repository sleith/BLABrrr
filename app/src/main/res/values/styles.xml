<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextWhite.Bold">
        <item name="fontPath">@string/fontBold</item>
    </style>

    <style name="TextWhite.Big">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="TextWhite.Big.Bold">
        <item name="fontPath">@string/fontBold</item>
    </style>

    <style name="TextPrimary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextPrimary.Big">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="TextPrimary.Big.Bold">
        <item name="fontPath">@string/fontBold</item>
    </style>

    <style name="TextPrimary.Big2">
        <item name="android:textSize">@dimen/text_big2</item>
    </style>

    <style name="TextPrimary.Big3">
        <item name="android:textSize">@dimen/text_big3</item>
    </style>

    <style name="TextDarkGray">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="TextDarkGray.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">@string/fontExtraBold</item>
    </style>

    <style name="ButtonWhite">
        <item name="android:background">@drawable/btn_white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">@string/fontExtraBold</item>
    </style>

    <style name="ButtonBackArrowWhite">
        <item name="android:src">@drawable/ic_arrowleft_white</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:background">#00000000</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <style name="ImageLogoText">
        <item name="android:src">@drawable/ic_logo_text</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="boxBackgroundColor">#ff0000</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#F0F3FF</item>
        <item name="hintTextColor">#F0F3FF</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:background">@drawable/bg_inputtext</item>
        <item name="boxBackgroundMode">filled</item>
    </style>

    <style name="TextInputEditTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">@string/fontBold</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#1D1F23</item>
    </style>

    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>