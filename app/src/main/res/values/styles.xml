<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextWhite">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextWhite.Big">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="TextPrimary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextPrimary.Big">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="TextPrimary.Big2">
        <item name="android:textSize">@dimen/text_big2</item>
    </style>

    <style name="TextPrimary.Big3">
        <item name="android:textSize">@dimen/text_big3</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonWhite">
        <item name="android:background">@drawable/btn_white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ImageLogoText">
        <item name="android:src">@drawable/ic_logo_text</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">70dp</item>
    </style>


</resources>